name:                gdax-trade
version:             0.1.0.0
-- synopsis:
-- description:
homepage:            https://github.com/githubuser/gdax-trade#readme
license:             BSD3
license-file:        LICENSE
author:              Author name here
maintainer:          example@example.com
copyright:           2017 Author name here
category:            Web
build-type:          Simple
extra-source-files:  README.md
cabal-version:       >=1.10
data-files:          config.yaml

library
  hs-source-dirs:      src
  exposed-modules:     Gdax.Data.OrderBook
                     , Gdax.Data.OrderBook.Types
                     , Gdax.Data.OrderBook.Internal
                     , Gdax.Data.Product
                     , Gdax.Data.TimeSeries
                     , Gdax.Data.TimeSeries.Types
                     , Gdax.Util.Config
                     , Gdax.Util.Feed
                     , Gdax.Util.Throttle
                     , Gdax.Util.Queue
  other-modules:       Paths_gdax_trade
                     , Gdax.Data.TimeSeries.Internal
                     , Gdax.Util.Config.Internal
  build-depends:       base >= 4.7 && < 5
                     , coinbase-exchange
                     , aeson
                     , async
                     , broadcast-chan
                     , bytestring
                     , containers
                     , deepseq
                     , hashmap
                     , http-client
                     , http-client-tls
                     , mtl
                     , pqueue
                     , stm
                     , text
                     , time
                     , websockets
                     , yaml
  default-language:    Haskell2010

executable gdax-trade-exe
  hs-source-dirs:      app
  main-is:             Main.hs
  ghc-options:         -threaded -rtsopts -with-rtsopts=-N -fwarn-unused-imports
  build-depends:       base
                     , gdax-trade
                     , coinbase-exchange
                     , aeson
                     , broadcast-chan
                     , hashmap
                     , http-client
                     , text
                     , time
                     , stm
                     , websockets
  default-language:    Haskell2010

test-suite gdax-trade-test
  type:                exitcode-stdio-1.0
  hs-source-dirs:      test
  other-modules:       Gdax.Data.OrderBook.Test
  ghc-options:         -fwarn-unused-imports
  main-is:             Spec.hs
  build-depends:       base
                     , gdax-trade
                     , coinbase-exchange
                     , hashmap
                     , mtl
                     , pqueue
                     , tasty
                     , tasty-hunit
                     , time
  ghc-options:         -threaded -rtsopts -with-rtsopts=-N -O1
  default-language:    Haskell2010

source-repository head
  type:     git
  location: https://github.com/githubuser/gdax-trade
